;================================================================================================================================================================================================
;
;   ./functions/dna.lab/t
;
;   This function combines the dna of two parent gylf to create a new gylf.
;
;   Assumptions:    Populated e.data fields.
;
;   Returns:        Populated g.data fields.
;
;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
;
;   Symbolic Cross-Referencing
;
;		./functions/dna.lab/fur/get.fur.attributes/t	get.fur.attributes
;																									get.p.attributes
;
;   ./functions/get.ticks/t												get.ticks
;
;   ./b                   												e.data
;                         												g.data
;
;   ./s                   												egg.e.parent.agility                        
;                         												egg.e.parent.base.color
;                         												egg.e.parent.endurance
;                         												egg.e.parent.secondary.color
;                         												egg.e.parent.strength
;                      												   	egg.i.parent.agility
;                         												egg.i.parent.base.color
;                         												egg.i.parent.endurance
;                         												egg.i.parent.secondary.color
;                         												egg.i.parent.strength
;                         												gylf.agility
;                         												gylf.base.color
;                         												gylf.base.fur.quality
;                         												gylf.endurance
;                         												gylf.secondary.color
;                         												gylf.secondary.fur.quality
;                         												gylf.strength

;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
;
;		Put together a base fur color for the new gylf.
;
    dna.lab:	push	gylf.base.color
              push  egg.e.parent.base.color
              push  egg.i.parent.base.color
              push  participant.base.color.number

              call  get.fur.attributes

;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
;
;		Put together a secondary fur color for the new gylf.
;
              push  gylf.secondary.color
              push  egg.e.parent.secondary.color
              push  egg.i.parent.secondary.color
              push  participant.secondary.color.number

              call  get.fur.attributes

;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
;
;		Put together a base fur quality for the new gylf.
;
              push  gylf.base.fur.quality
              push  egg.e.parent.base.fur.quality
              push  egg.i.parent.base.fur.quality
              push  participant.base.fur.quality.number

              call  get.fur.attributes

;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
;
;		Put together a secondary fur quality for the new gylf.
;
              push  gylf.secondary.fur.quality
              push  egg.e.parent.secondary.fur.quality
              push  egg.i.parent.secondary.fur.quality
              push  participant.secondary.fur.quality.number

              call  get.fur.attributes

;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
;
;		Determine the new gylf's agility.
;
							push	egg.e.parent.agility
							push	egg.i.parent.agility
							push	gylf.agility

							call	get.p.attributes

;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
;
;		Determine the new gylf's endurance.
;
							push	egg.e.parent.endurance
							push	egg.i.parent.endurance
							push	gylf.endurance

							call	get.p.attributes

;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
;
;		Determine the new gylf's strength.
;
              push	egg.e.parent.strength
              push	egg.i.parent.strength
              push	gylf.strength

							call	get.p.attributes

;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

							ret
