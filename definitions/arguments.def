;==================================================================================================================================================================================================================
;
;   arguments.def
;
;   This file contains definitions pertaining to the aggregation of arguments from the socket. At the time of this writing, there is support for ten arguments, and room for more if the necessity arises, which
;   should not happen.
;

	arguments.packet	    equ	  $
	arguments.num		      resb	0001h

	argument.01.size	    resb	0001h
	argument.01.location  resd	0001h

	argument.entry.size	  equ	  $-argument.01.size

	argument.02.size	    resb	0001h
	argument.02.location  resd	0001h

	argument.03.size	    resb	0001h
	argument.03.location  resd	0001h

	argument.04.size	    resb	0001h
	argument.04.location  resd	0001h

	argument.05.size	    resb	0001h
	argument.05.location  resd	0001h

	argument.06.size	    resb	0001h
	argument.06.location  resd	0001h

	argument.07.size	    resb	0001h
	argument.07.location  resd	0001h

	argument.08.size	    resb	0001h
	argument.08.location  resd	0001h

	argument.09.size	    resb	0001h
	argument.09.location  resd	0001h

	argument.10.size	    resb	0001h
	argument.10.location  resd	0001h

	arguments.packet.l	  equ	  $-arguments.packet
