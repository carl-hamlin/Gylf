;=================================================================================================================================================================================================
;
;   functions
;
;   This file contains definitions for function calls. Without these definitions, the program would run on magic numbers and be difficult to read.
;

    %define     sys.socket.call                         066h     ; The little Kahuna. 066h indicates socket functionality.

;-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

    %define     sys.socket.create                       001h    ; 001h is the modifier for 066h that tells the kernel we want to create a new socket. Here, we use it to build the listening socket for
                                                                ; incoming connections.
    %define     sys.socket.bind                         002h    ; 002h is the modifier for 066h that tells the kernel we want to bind an existing socket to a port.
    %define     sys.socket.listen                       004h    ; 004h is the modifier for 066h that tells the kernel we want the bound socket to listen for incoming connections.
    %define     sys.socket.accept                       005h    ; 005h is the modifier for 066h that tells the kernel we want the listening socket to accept an inbound connection.
    %define     sys.socket.send                         009h    ; 009h is the modifier for 066h that tells the kernel we're attempting to send data to an active, connected socket. We don't use this much
                                                                ; here, preferring kernel function 004h to write directly to the socket descriptor.
    %define     sys.socket.recv                         00Ah    ; 00Ah is the modifier for 066h that tells the kernel we want to read the data waiting on an active socket.

;-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

    %define     sys.write.call                          004h    ; 004h is the modifier for 080h that tells the kernel we want to write data to a specified descriptor.
    %define     sys.unlink                              00Ah    ; 00Ah is the modifier for 080h that tells the kernel we want to smoke a file.
    %define     sys.lseek.call                          013h    ; 013h is the modifier for 080h that tells the kernel we'd like to move the file pointer.

;-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

    %define     sys.lseek.current.position              001h    ; 001h indicates to the lseek function that we're seeking from the current position.
    %define     sys.lseek.eof                           002h    ; 002h indicates to the lseek function that we're seeking to the end of the file.
    %define     sys.standard.output                     001h    ; 001h is the descriptor we pass to the write function when we want to write to the screen.
    %define     sys.no.bytes.read                       000h    ; Indicator for no bytes having been read during the read function.
